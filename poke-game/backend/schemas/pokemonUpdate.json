{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/pokemonUpdate.schema.json",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 1
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "type": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "name",
    "type"
  ]
}
